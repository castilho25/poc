@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated) {
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" })) {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="nav-item dropdown show">
            <a class="nav-link dropdown-toggle" data-toggle="dropdown" id="dropdown01" aria-haspopup="true" aria-expanded="false">Registar</a>
            <div class="dropdown-menu" aria-labelledby="dropdown01">
                @Html.ActionLink("Registar Pais", "RegisterPai", "Account", routeValues: null, htmlAttributes: new { id = "registerPaiLink", @class = "dropdown-item" })<br />
                @Html.ActionLink("Registar Instituição", "RegisterInstituicao", "Account", routeValues: null, htmlAttributes: new { id = "registerInstituicaoLink", @class = "dropdown-item" })
            </div>
        </li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
