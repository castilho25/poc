@model IEnumerable<SFC.Models.SFC.Paiis.Filhos>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Filhos</h2>
@using (Html.BeginForm())
{
    <p>
        Procurar por nome: @Html.TextBox("SearchString")
        @Html.DropDownList("ID", (SelectList)ViewBag.Search, new { @id = "ID", @searchType = "SearchType" })
        <input type="submit" value="Search" />
    </p>
}
<table class="table">
    <tr>
        <th>
            Pai
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CivilID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataNascimento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genero)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EstadoCivil)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nacionalidade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Concelho)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Freguesia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Endereço)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Pai.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CivilID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataNascimento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genero)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EstadoCivil)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nacionalidade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Concelho)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Freguesia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Endereço)
        </td>
        <td>
            @Html.ActionLink("Detalhes", "Details", new { id = item.FilhoID })
        </td>
    </tr>
}

</table>
